{
	"name": "ionic-logging-service",
	"version": "0.0.0-development",
	"description": "Logging functionalities for apps built with Ionic framework",
	"author": {
		"name": "Markus Wagner",
		"email": "markus.wagner02@web.de"
	},
	"repository": "https://github.com/Ritzlgrmft/ionic-logging-service.git",
	"license": "MIT",
	"private": false,
	"keywords": [
		"ionic",
		"mobile",
		"logging",
		"log4javascript"
	],
	"scripts": {
		"build": "npm run clean && npm run compile",
		"clean": "cd dist && ls | grep -v .npmignore | xargs rm && cd ..",
		"commit": "git-cz",
		"compile": "ngc -p tsconfig.aot.json",
		"report-coverage": "codecov",
		"karma": "karma start karma.conf.js --browsers Chrome",
		"karma-once": "karma start karma.conf.js --browsers PhantomJS --single-run",
		"lint": "tslint --project tsconfig.no-types-excluded.json --format verbose --type-check --exclude \"**/*.spec.ts\"",
		"semantic-release": "semantic-release pre && npm publish && semantic-release post",
		"test": "npm run compile && npm run lint && npm run karma-once"
	},
	"files": [
		"dist",
		"src"
	],
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"peerDependencies": {
		"@angular/core": "^2.4.8",
		"rxjs": "^5.0.1",
		"zone.js": "^0.7.2"
	},
	"dependencies": {
		"ionic-configuration-service": "^4.0.0",
		"log4javascript": "^1.4.15"
	},
	"devDependencies": {
		"@angular/common": "2.4.8",
		"@angular/compiler": "2.4.8",
		"@angular/compiler-cli": "2.4.8",
		"@angular/core": "2.4.8",
		"@angular/http": "2.4.8",
		"@angular/platform-browser": "2.4.8",
		"@angular/platform-browser-dynamic": "2.4.8",
		"rxjs": "5.0.1",
		"zone.js": "0.7.2",
		"@types/es6-shim": "^0.31.32",
		"@types/jasmine": "2.5.41",
		"codecov": "^2.1.0",
		"codelyzer": "2.0.1",
		"commitizen": "^2.9.6",
		"cz-conventional-changelog": "^2.0.0",
		"jasmine-core": "^2.5.2",
		"karma": "^1.5.0",
		"karma-chrome-launcher": "^2.0.0",
		"karma-es6-shim": "^1.0.0",
		"karma-jasmine": "^1.1.0",
		"karma-phantomjs-launcher": "^1.0.4",
		"karma-typescript": "^3.0.0-beta.2",
		"karma-typescript-es6-transform": "^1.0.0-beta.6",
		"reflect-metadata": "^0.1.10",
		"requirejs": "^2.3.3",
		"tslint": "^4.5.1",
		"typescript": "2.0.9",
		"semantic-release": "^6.3.2"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}