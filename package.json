{
	"name": "ionic-logging-service",
	"version": "0.0.0-development",
	"description": "Logging functionalities for apps built with Ionic framework",
	"author": {
		"name": "Markus Wagner",
		"email": "markus.wagner02@web.de"
	},
	"repository": "https://github.com/Ritzlgrmft/ionic-logging-service.git",
	"license": "MIT",
	"private": false,
	"keywords": [
		"ionic",
		"mobile",
		"logging",
		"log4javascript"
	],
	"scripts": {
		"build": "npm run clean && npm run compile",
		"clean": "cd dist && ls | grep -v .npmignore | xargs rm && cd ..",
		"commit": "git-cz",
		"compile": "ngc -p tsconfig.aot.json",
		"report-coverage": "codecov",
		"karma": "karma start karma.conf.js --browsers Chrome",
		"karma-once": "karma start karma.conf.js --browsers PhantomJS --single-run",
		"lint": "tslint --project tsconfig.json --format verbose",
		"semantic-release": "semantic-release",
		"test": "npm run compile && npm run lint && npm run karma-once",
		"typedoc": "typedoc src --out typedoc --exclude \"**/*.spec.ts\" --mode file --readme none --excludePrivate",
		"travis-deploy-once": "travis-deploy-once"
	},
	"files": [
		"dist",
		"src"
	],
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"peerDependencies": {
		"@angular/core": "^5.0.0",
		"rxjs": "^5.5.2",
		"zone.js": "^0.8.18"
	},
	"dependencies": {
		"log4javascript": "^1.4.15"
	},
	"optionalDependencies": {
		"ionic-configuration-service": "^6.0.0"
	},
	"devDependencies": {
		"@angular/common": "5.0.0",
		"@angular/compiler": "5.0.0",
		"@angular/compiler-cli": "5.0.0",
		"@angular/core": "5.0.0",
		"@angular/http": "5.0.0",
		"@angular/platform-browser": "5.0.0",
		"@angular/platform-browser-dynamic": "5.0.0",
		"rxjs": "5.5.2",
		"zone.js": "0.8.26",
		"@types/jasmine": "2.8.8",
		"babel-polyfill": "6.26.0",
		"codecov": "3.0.2",
		"codelyzer": "4.3.0",
		"commitizen": "2.10.1",
		"cz-conventional-changelog": "2.1.0",
		"jasmine-core": "3.1.0",
		"karma": "2.0.2",
		"karma-chrome-launcher": "2.2.0",
		"karma-jasmine": "1.1.2",
		"karma-phantomjs-launcher": "1.0.4",
		"karma-typescript": "3.0.12",
		"karma-typescript-es6-transform": "1.0.4",
		"reflect-metadata": "0.1.12",
		"requirejs": "2.3.5",
		"tslint": "5.10.0",
		"typedoc": "0.11.1",
		"typescript": "2.4.2",
		"semantic-release": "15.5.0",
		"travis-deploy-once": "5.0.0"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
