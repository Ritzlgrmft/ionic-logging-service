{
	"extends": [
		"tslint-angular"
	],
	"rules": {
		"indent": [
			true,
			"tabs"
    ],
    "deprecation": {
      "severity": "warning"
    },
		"quotemark": [
			true,
			"double"
		],
		"directive-selector": [
			true,
			"attribute",
			"app",
			"camelCase"
		],
		"component-selector": [
			true,
			"element",
			"app",
			"page",
			"kebab-case"
		]
	}
}